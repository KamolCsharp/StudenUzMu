@model StudenUzMu.ViewModel.UqituvFanViewModel
<div class="container">

    <h3>Yangi UqituvFan qoshish</h3>
    <hr />
    <div class="row ">
        <form asp-controller="UqituvFan" method="post" class="form-horizontal" role="form" asp-action="Create">

            <div class="form-group">
                <label asp-for="UqituvFan.Uqituvchi" class="control-label"> </label>
                @Html.DropDownListFor(m =>m.UqituvFan.UqituvchiId,
               new SelectList(Model.Uqituvchis.Select(x=>new {Value=x.Id,Text=x.Familiyasi+" "+x.Ismi+" "+x.Sharifi}),"Value","Text"),
               "",htmlAttributes:new {@class="form-control border-input" })
                <span asp-validation-for="UqituvFan.Uqituvchi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UqituvFan.Fanlar" class="control-label"> </label>
                @Html.DropDownListFor(m =>m.UqituvFan.FanlarId,
               new SelectList(Model.Fanlars.Select(x=>new {Value=x.Id,Text=x.Nomi}),"Value","Text"),
               "",htmlAttributes:new {@class="form-control border-input" })
                <span asp-validation-for="UqituvFan.Fanlar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>

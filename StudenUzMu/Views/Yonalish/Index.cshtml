@model IEnumerable<Yonalish>
    <h1 class="text-center">Universtetdagi Yonalishlar ro'yxati</h1>
    <hr />
    <div class="container">
        <a class="btn btn-success mt-5" style="margin:10px;" asp-controller="Yonalish" asp-action="Create">Yangi Yonalish qoshish</a>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Fakultet Nomi</td>
                    <td>Yonalish Nomi</td>
                    <td>Edit </td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Yonalish yon in Model)
                {
                    <tr>
                        <td>@yon.Id</td>
                        <td>@yon.Fakultet.Nomi</td>
                        <td>@yon.Nomi</td>
                        <td><a class="btn btn-info" asp-area="" asp-controller="Yonalish" asp-action="Update" asp-route-id="@yon.Id">Edit</a></td>
                        <td><a class="btn btn-danger" asp-area="" asp-controller="Yonalish" asp-action="Delete" asp-route-id="@yon.Id">Delete</a></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>